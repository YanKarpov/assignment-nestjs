generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tag {
  id        Int       @id @default(autoincrement())
  title     String    @unique
  createdAt DateTime  @default(now())
  articles  Article[]
}

model Article {
  id             Int      @id @default(autoincrement())
  slug           String   @unique
  title          String   @unique
  description    String
  body           String
  tagList        Tag[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  favorited      Boolean  @default(false)
  favoritesCount Int      @default(0)
}
